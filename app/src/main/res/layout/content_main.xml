<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.twlkyao.mymove.MainActivity"
    tools:showIn="@layout/activity_main">

    <com.twlkyao.mymove.MyViewByAnimation
        android:id="@+id/myViewByAnimation"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="#ffff0000" />

    <com.twlkyao.mymove.MyViewByLayout
        android:id="@+id/myViewByLayout"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/myViewByAnimation"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="#ff00ff00" />

    <com.twlkyao.mymove.MyViewByScroll
        android:id="@+id/myViewByScroll"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/myViewByLayout"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="I am an TextView with text"
        android:background="#ff0000ff" />

    <com.twlkyao.mymove.MyViewByScroller
        android:id="@+id/myViewByScroller"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/myViewByScroll"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="I am an TextView with text"
        android:background="#ffffff00" />

    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/myViewByScroller"
        android:text="Move"
        />

</RelativeLayout>
